<h3>Cadastro de cliente</h3>
{{#each erros}}
<div class="alert alert-danger" role="alert">
    {{text}}
</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/clientenovo" method="POST">
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control" required="true" autocomplete="off">
            <label for="cnpj" class="mt-2">CNPJ/CPF</label>
            <input type="text" id="cnpj" name="cnpj" placeholder="" class="form-control" autocomplete="off">
            <label for="telefone"class="mt-2">Telefone</label>
            <input type="text" id="telefone" name="telefone" placeholder="0000-0000" class="form-control" autocomplete="off">
            <label for="endereco"class="mt-2">Endere√ßo</label>
            <input type="text" id="endereco" name="endereco" placeholder="Rua..." class="form-control" autocomplete="off">
            <label for="email"class="mt-2">E-mail</label>
            <input type="text" id="email" name="email" placeholder="" class="form-control" autocomplete="off">
            <button type="submit" class="btn btn-success mt-4">Salvar</button>
        </form>
    </div>
</div>